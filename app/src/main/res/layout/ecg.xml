<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayoutECGVentilationText"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="2.5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewECGHeartRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/ECGHeartRate"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewECGHeartRateValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/ECGHeartRateValue"
            android:textSize="30sp" />
        
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutECGChart"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.8"
        android:orientation="horizontal" >

          <com.artfulbits.aiCharts.ChartView
              android:id="@+id/chartViewECG"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" />

    </LinearLayout>

</LinearLayout>