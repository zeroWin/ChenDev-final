<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayoutBloodPress"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2.5"
        >

        <TextView
            android:id="@+id/textViewBloodPressSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="180dp"
            android:layout_weight="0.1"
            android:textSize="30sp"
            android:text="@string/bloodpressSP" />








        <TextView
            android:id="@+id/textViewBloodPressSPValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            
            android:layout_weight="0.4"
            android:textSize="30sp"
            android:text="@string/nullValue" />







        <TextView
            android:id="@+id/textViewBloodPressDP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:textSize="30sp"
            android:text="@string/bloodpressDP" />





        <TextView
            android:id="@+id/textViewBloodPressDPValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.4"
            android:textSize="30sp"
            android:text="@string/nullValue" />

    </LinearLayout>
<LinearLayout
        android:id="@+id/linearLayoutBloodPressChart"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

         <com.artfulbits.aiCharts.ChartView
              android:id="@+id/BloodPressDCchartView"
              android:layout_weight="1"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" />
    
        <com.artfulbits.aiCharts.ChartView
              android:id="@+id/BloodPressACchartView"
              android:layout_weight="1"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" />   
        <!--  <com.artfulbits.aiCharts.ChartView
              android:id="@+id/BloodPressDCchartView"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" />
          
           <com.artfulbits.aiCharts.ChartView
              android:id="@+id/BloodPressACchartView"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" />--> 

</LinearLayout>
</LinearLayout>