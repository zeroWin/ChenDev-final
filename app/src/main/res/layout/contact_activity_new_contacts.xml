<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff1f1f1" >

    <!-- 顶部工具条 -->

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#106184" >

        <ImageButton
            android:id="@+id/imb_new_back"
            android:layout_width="45dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:background="#106184"
            android:src="@drawable/contact_tool_bar_style" />

        <ImageView
            android:id="@+id/img_divider"
            android:layout_width="1dip"
            android:layout_height="40dip"
            android:layout_toRightOf="@id/imb_new_back"
            android:background="@drawable/contact_top_bar_diviver" />

        <TextView
            android:id="@+id/txtNewContactTitle"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_divider"
            android:background="#106184"
            android:gravity="center"
            android:text="新建联系人"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <!-- 中间编辑栏 -->

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/tool_bar" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#fff1f1f1"
            android:paddingBottom="50dip" >

            <!-- 头像选择 -->

            <RelativeLayout
                android:id="@+id/llPhotoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <FrameLayout
                    android:id="@+id/widget_call_layout"
                    android:layout_width="86.0dip"
                    android:layout_height="86.0dip"
                    android:layout_gravity="center"
                    android:background="@drawable/contact_bg_photo_default_mask3_1" >

                    <ImageView
                        android:id="@+id/contact_facepic"
                        android:layout_width="78.0dip"
                        android:layout_height="78.0dip"
                        android:layout_gravity="center"
                        android:background="#ffffffff"
                        android:src="@drawable/contact_bg_photo_default" />

                    <FrameLayout
                        android:id="@+id/PhotoView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/edit_photo"
                            android:layout_width="86.0dip"
                            android:layout_height="86.0dip" />

                        <ImageView
                            android:id="@+id/face_photo_edit"
                            android:layout_width="27dip"
                            android:layout_height="27dip"
                            android:layout_gravity="bottom|right|center"
                            android:src="@drawable/contact_edit_photo_icon" />
                    </FrameLayout>
                </FrameLayout>

                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:layout_marginLeft="110dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="25dip"
                    android:background="@drawable/contact_info_bg"
                    android:hint="请输入姓名"
                    android:textColor="#000000"
                    android:textCursorDrawable="@null"
                    android:textSize="22dip" />
            </RelativeLayout>

            <!-- phone -->

            <RelativeLayout
                android:id="@+id/rlPhoneTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/llPhotoTitle"
                android:layout_marginTop="10dip" >

                <ImageView
                    android:id="@+id/img_phone"
                    android:layout_width="26dip"
                    android:layout_height="26dip"
                    android:layout_marginLeft="20dip"
                    android:src="@drawable/contact_title_call_icon" />

                <TextView
