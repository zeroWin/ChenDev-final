                    android:text="IM"
                    android:textColor="#398ece"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.5dip"
                    android:layout_below="@id/img_im"
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="12dip"
