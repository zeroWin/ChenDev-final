                    android:layout_height="33dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="5dip"
                    android:layout_toRightOf="@id/txt_type"
                    android:background="@drawable/contact_info_bg"
                    android:hint="请输入医保类型"
