            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlRelationName"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_below="@id/rlHospital"
                android:layout_marginBottom="10dip"
                android:background="#fff1f1f1"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/txt_relationname"
                    style="@style/contact_textstyle01"
                    android:text="联系人姓名" />

                <EditText
                    android:id="@+id/edt_inputrelationname"
                    android:layout_width="150dip"
                    android:layout_height="33dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="5dip"
                    android:layout_toRightOf="@id/txt_relationname"
