                    android:id="@+id/txt_fileno"
                    style="@style/contact_textstyle01"
                    android:text="档案编号" />

                <EditText
                    android:id="@+id/edt_inputfileno"
                    android:layout_width="150dip"
                    android:layout_height="33dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="5dip"
                    android:layout_toRightOf="@id/txt_fileno"
                    android:background="@drawable/contact_info_bg"
                    android:hint="请输入档案编号"
