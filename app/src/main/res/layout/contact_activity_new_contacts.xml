                    android:layout_marginTop="5dip"
                    android:layout_toRightOf="@id/edt_inputnickname"
                    android:background="#fff1f1f1"
                    android:src="@drawable/contact_edit_del" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlIdNo"
