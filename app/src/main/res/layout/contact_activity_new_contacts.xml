                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="5dip"
                    android:layout_toRightOf="@id/edt_inputidno"
                    android:background="#fff1f1f1"
                    android:src="@drawable/contact_edit_del" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlDescribe"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_below="@id/rlIdNo"
                android:layout_marginBottom="10dip"
                android:background="#fff1f1f1"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/txt_describe"
                    style="@style/contact_textstyle01"
                    android:text="就诊描述" />

                <EditText
                    android:id="@+id/edt_inputdescribe"
                    android:layout_width="150dip"
                    android:layout_height="33dip"
                    android:layout_marginLeft="10dip"
